<% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <p><%= @book.errors.count %>errors prohibited this obj from being saved</p>
           <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
           </ul>
          </div>
<% end %>


<div class="container">
  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <%elsif flash[:alert]%>
  <%= flash[:alert] %>
  <%end%>
<div class="contaiber">
	 <div class="row">
	 	      <%= render 'books/list', user: @user, book: @book1 %>

        <!-- 投稿一覧 -->
          <div class="col-xs-9" style="background-color: pink;">
	   <h2>Book detail</h2>
  <table class="table">

    <tbody>
      <tr>
        <td>
          <%= link_to (user_path(@user.id)) do %>
          <%= attachment_image_tag @book.user,:profile_image,:fill,60,60,fallback: "no_image.jpg" %><br>
             <%= @book.user.name %>
             <% end %>
        </td>

        <td>
          <%= link_to @book.title, book_path(@book) %>
        </td>

        <td>
          <%= @book.body %>
        </td>

          <%if current_user == @book.user%>

        <td>
          <%= link_to "edit", edit_book_path(@book.id) %>
        </td>

        <td>
          <%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？？" %>
        </td>
         <%end%>
         </tr>
    </tbody>
  </table>
</div>

